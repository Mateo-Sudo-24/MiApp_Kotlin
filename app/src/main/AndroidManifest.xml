<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.miapp"> <!-- Asegúrate que este sea tu paquete real -->

    <!-- Permisos necesarios para tus 3 actividades -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MiApp"
        tools:targetApi="31">

        <!-- 1. ACTIVIDAD PRINCIPAL (La que se abre al tocar el icono) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Menú Principal"
            android:theme="@style/Theme.MiApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 2. ACTIVIDAD DE CÁMARA (CameraActivity.kt) -->
        <activity
            android:name=".CameraActivity"
            android:exported="false"
            android:label="Cámara" />

        <!-- 3. ACTIVIDAD DE UBICACIÓN (LocationActivity.kt) -->
        <activity
            android:name=".LocationActivity"
            android:exported="false"
            android:label="Ubicación" />

        <!-- Proveedor de archivos para la cámara (Necesario para guardar fotos) -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>
</manifest>